<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#0C0101"
    tools:context=".view.details.DetailsFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/gradient_desc_bg">

                <androidx.cardview.widget.CardView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:elevation="12dp"
                    app:cardCornerRadius="60dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="30dp"
                    android:layout_gravity="center">

                    <ImageView
                        android:id="@+id/image_view"
                        android:layout_height="match_parent"
                        android:layout_width="match_parent"
                        tools:src="@mipmap/ic_launcher_round"
                        android:scaleType="centerCrop"/>

                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/trackName"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:fontFamily="cursive"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="30dp"
                    tools:text="Charlie Puth Charlie Puth Charlie Puth Charlie Puth"
                    android:textColor="@android:color/white"
                    android:textSize="30sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:weightSum="1">

                <TextView
                    android:id="@+id/trackTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="8dp"
                    tools:text="1:22 mins"
                    android:textColor="#fff"
                    android:layout_gravity="center"
                    android:fontFamily="@font/poppins_medium"
                    android:layout_weight="0.5"
                    app:drawableStartCompat="@drawable/ic_time"/>

                <TextView
                    android:id="@+id/trackDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="8dp"
                    tools:text="02/22/2022"
                    android:textColor="#fff"
                    android:fontFamily="@font/poppins_medium"
                    android:layout_gravity="center"
                    android:layout_weight="0.5"
                    app:drawableStartCompat="@drawable/ic_date"/>

            </LinearLayout>

            <TextView
                android:id="@+id/trackArtist"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:drawablePadding="8dp"
                tools:text="Charlie Puth Charlie Puth Charlie Puth Charlie Puth Charlie Puth"
                android:textColor="#fff"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="start"
                android:fontFamily="@font/poppins_medium"
                android:layout_weight="0.5"
                app:drawableStartCompat="@drawable/ic_user"/>

            <TextView
                android:id="@+id/trackGenre"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:drawablePadding="8dp"
                tools:text="Charlie Puth Charlie Puth Charlie Puth Charlie Puth Charlie Puth"
                android:textColor="#fff"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="start"
                android:fontFamily="@font/poppins_medium"
                android:layout_weight="0.5"
                app:drawableStartCompat="@drawable/ic_genre"/>

            <TextView
                android:id="@+id/trackLink"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:drawablePadding="8dp"
                tools:text="Charlie Puth Charlie Puth Charlie Puth Charlie Puth Charlie Puth"
                android:textColor="#fff"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="start"
                android:fontFamily="@font/poppins_medium"
                android:layout_weight="0.5"
                app:drawableStartCompat="@drawable/ic_link"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#54FFFFFF"
                android:layout_marginTop="20dp"
                android:layout_marginStart="35dp"
                android:layout_marginEnd="35dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:textSize="18sp"
                android:fontFamily="@font/poppins_bold"
                android:text="@string/about_song"
                android:textColor="#fff" />

            <TextView
                android:id="@+id/trackShortDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Charlie Puth Charlie Puth Charlie Puth Charlie Puth Charlie Puth"
                android:textColor="#fff"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/poppins_medium"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#54FFFFFF"
                android:layout_marginTop="20dp"
                android:layout_marginStart="35dp"
                android:layout_marginEnd="35dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:textSize="18sp"
                android:fontFamily="@font/poppins_bold"
                android:text="@string/song_description"
                android:textColor="#fff" />

            <TextView
                android:id="@+id/trackLongDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Charlie Puth Charlie Puth Charlie Puth Charlie Puth Charlie Puth"
                android:textColor="#fff"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/poppins_medium"/>

        </LinearLayout>

    </ScrollView>

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>